package Carental;

public class Rental {

    public class Vehicle{
        String Colour = "Silver";
       
        public String getColour(){
            return Colour;
        }
        public String toString(){
            return "Vehicle's colour is "+Colour;  
       }
    }
   
    public static class Car extends Vehicle{
        boolean wintertires = false;

        public String toString(){//overriding the toString() method  
            return "Vehicle's colour is "+Colour+", and has winter tires:"+wintertires;  
       }
    }
    public static class Truck extends Vehicle{
       boolean Trailer = false;
        public String toString(){
           return "Vehicle's colour is "+Colour+", and has a trailer:"+Trailer;  
        }
    }
    public static class Garage{
        Vehicle C = new Car();
        Vehicle T = new Truck();
       
       
        public String setVehicle(Vehicle parked){
           return parked.toString();       
        }
        public String toString(){ 
           return C.toString()+T.toString();  
        }
    }
   
    public static class GarageTester{
       
        public String getExample(){
            Truck Tr = new Truck();
            Tr.Colour = "Green";
            Tr.Trailer = false;
           
            Garage gr = new Garage();
            return gr.setVehicle(Tr);
        }
    }
    public static class Customer{
       
        String name = "Edwins";
        String address = "Kampala";
   
    }
   
    public static class Rentalcontract{
        Customer cm = new Customer();
        Vehicle V = new Car();
       
        Rentalcontract(String name,String address){
            cm.name = name;
            cm.address = address;
        }
       
        public String toString(){
           return cm.name+" : "+V.toString();  
        }
    }
    public static class CarRental{
        String carArray[] = new String[20];
       
        void addContract(Rentalcontract c1){
            for(int x=0; x<carArray.length; x++){
                cararray[x] = c1.toString();
            }
        }
       
        String displayContracts(){
           
            for (String a : cararray){
                return a;
            }
           
            return "No rental contracts";
        }
    }
   
    public static void main(String[] args) {
       
        //Test cases
        Car ca = new Car();
        System.out.println("My car instance: "+ca.toString());
       
        Truck tru = new Truck();
        System.out.println("My truck instance: "+tru.toString());
       
        GarageTester g = new GarageTester();
        System.out.println("Garage Tester: "+g.getExample());
         
        Rentalcontract RC = new Rentalcontract("Akello","Mukono");    
        CarRental cr = new CarRental();

        cr.addContract(RC);
        System.out.println("My Contracts:"+cr.displayContracts());
    }
   
}
